{
	"compilerOptions": {
		"outDir"                : "./dist/",
		"typeRoots"             : [
			"./src/types",
			"./node_modules/@types"
		],
		"experimentalDecorators": true,
		"sourceMap"             : true,
		"strict"                : true,
		"noImplicitReturns"     : true,
		"noImplicitAny"         : true,
		"module"                : "commonjs",
		"moduleResolution"      : "node",
		"target"                : "ES2016",
		"lib"                   : [
			"es6"
		]
	},
	"include"        : [
		"./src/**/*",
		"./src/types"
	]
}
